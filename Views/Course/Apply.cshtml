@model Candidate
<div class="display-6">
    Apply
</div>


<form>
    <div class="form-group my-2">
        <label>Email</label>
        <input name="Email" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label>Adınız</label>
        <input name="FirstName" class="form-control"/>
    </div>
   <div class="form-group my-2">
        <label>Soyadınız</label>
        <input name="LastName" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label>Yaşınız</label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="18">19</option>
            <option value="18">20</option>
            <option value="18">21</option>
            <option value="18">22</option>
            <option value="18">23</option>
            <option value="18">24</option>
            <option value="18">25</option>
        </select>
    </div>
    <fieldset>
        <legend>Bir kurs seçiniz</legend>
        <p>
            <input id="mvc" type="radio" name="SelectedCourse" value="ASP .NET CORE MVC" />
            <label>ASP .NET CORE MVC</label>
             <input id="api" type="radio" name="SelectedCourse" value="ASP .NET CORE API" />
            <label>ASP .NET CORE API</label>
             <input id="blazor" type="radio" name="SelectedCourse" value="Blazor" />
            <label>Blazor</label>
        </p>
    </fieldset>
    <div>
        <button class="btn btn-primary" type="submit">Başvuru Yap</button>
        <a class="btn btn-warning" href="/">Anaysafa</a>
    </div>
</form>